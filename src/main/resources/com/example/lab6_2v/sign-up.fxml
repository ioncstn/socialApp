<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab6_2v.SignUpController">
   <children>
      <TextField fx:id="name_field" layoutX="226.0" layoutY="67.0" promptText="name" />
      <TextField fx:id="email_field" layoutX="226.0" layoutY="108.0" promptText="email" />
      <PasswordField fx:id="password_field" layoutX="227.0" layoutY="147.0" promptText="password" />
      <Button layoutX="272.0" layoutY="210.0" mnemonicParsing="false" onAction="#createAccount" text="sign up" />
      <Label fx:id="error_label" layoutX="68.0" layoutY="181.0" prefHeight="18.0" prefWidth="463.0" textFill="RED">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Label layoutX="222.0" layoutY="244.0" text="already have an account?">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Hyperlink layoutX="277.0" layoutY="272.0" onAction="#switchToLogInScene" text="log in" underline="true">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Hyperlink>
   </children>
</AnchorPane>
